{
  "name": "todoapp",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "prisma generate && vite dev",
    "build": "prisma generate && vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest --silent",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "format:check": "prettier --plugin-search-dir . --check .",
    "prepare": "svelte-kit sync && husky install",
    "pre-commit": "lint-staged",
    "ci:format": "pnpm format:check",
    "ci:type-check": "pnpm check",
    "ci:lint": "pnpm eslint .",
    "ci:test": "pnpm vitest run --silent",
    "ci:build": "pnpm build"
  },
  "dependencies": {
    "@lucia-auth/adapter-prisma": "^0.4.0",
    "@lucia-auth/session-adapter-redis": "^0.1.0",
    "@prisma/client": "^4.9.0",
    "daisyui": "^2.50.0",
    "ioredis": "^5.3.0",
    "lucia-auth": "^0.6.0",
    "prisma-error-enum": "^0.1.3",
    "svelte-gh-hotkey": "^0.2.1",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-static": "^2.0.0",
    "@sveltejs/kit": "^1.0.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "prisma": "^4.9.0",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vitest": "^0.25.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm pre-commit"
    }
  },
  "lint-staged": {
    "*": "pnpm format",
    "*.{ts,js,css,scss,html,json,yaml,svelte}": [
      "pnpm vitest run --silent --",
      "pnpm check",
      "pnpm build --"
    ],
    "*.{ts,js,svelte}": "pnpm eslint",
    "schema.prisma": "pnpm prisma format"
  }
}
